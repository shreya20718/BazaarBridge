  <body>

    <!-- Header Section -->
    <header>
      <div class="left-buttons">
        <a href="supplier_antcs.html">📊 View My Analytics</a>
      </div>

      <div style="position: relative;">
        <button onclick="toggleDropdown()">👤 Supplier Menu ▼</button>
        <div id="dropdown">
          <div>
            <h3>👤 Supplier Profile</h3>
            <p><strong>Name:</strong> Shiv Traders</p>
            <p><strong>Email:</strong> shivtraders@example.com</p>
            <p><strong>Supplier ID:</strong> ST1023</p>
          </div>
        </div>
      </div>
    </header>

    <!-- Title -->
    <h1>Supplier Dashboard</h1>

    <!-- Form -->
  <form id="itemForm">
    <label>Item Name:</label>
    <input type="text" id="itemName" required>

    <h2>Set Your Product Price</h2>
    <div class="price-box">
      <label for="priceInput" class="price-label">Price:</label>
      <div class="price-flex">
        <input type="number" id="priceInput" class="price-input" placeholder="Enter amount" min="0" />
        <span class="price-separator">/</span>
        <input type="text" id="unitInput" class="unit-input" placeholder="kg / g / liter" />
      </div>
    </div>

  <div class="category-box">
    <label for="categorySelect" class="price-label">Category:</label>
    <select id="categorySelect" class="category-select" required>
      <option value="" disabled selected>Select Category</option>
      <option value="Vegetables">Vegetables</option>
      <option value="Fruits">Fruits</option>
      <option value="Other">Other</option>
    </select>
  </div>

    <label>Quantity Available:</label>
    <input type="number" id="itemQuantity" required>

  <label for="itemDescription">Description:</label>
  <textarea id="itemDescription" rows="4" placeholder="Enter description of the item..." required></textarea>

  <button type="submit">Add Item</button>
  </form>

    <!-- Cards Container -->
    <div class="product-container" id="productContainer">
  <!-- Cards will be injected here -->
</div>



    <!-- Footer Section -->
  <footer class="footer">
    <div class="footer-container">
      <a href="home.html" class="footer-link">
        <i class="fas fa-home"></i> Home
      </a>
      <a href="contact.html" class="footer-link">
        <i class="fas fa-phone"></i> Contact Us
      </a>
      <a href="about.html" class="footer-link">
        <i class="fas fa-info-circle"></i> About Us
      </a>
      <a href="account.html" class="footer-link">
        <i class="fas fa-user"></i> Account
      </a>
      <a href="store.html" class="footer-link">
        <i class="fas fa-shopping-cart"></i> Store
        <span id="cartCount">(0)</span>
      </a>
    </div>
  </footer>


<script>
  function toggleDropdown() {
    const dropdown = document.getElementById('dropdown');
    dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
  }

  const form = document.getElementById('itemForm');
  const container = document.getElementById('productContainer');

  form.addEventListener('submit', function (e) {
    e.preventDefault();

    const name = document.getElementById('itemName').value;
    const price = document.getElementById('priceInput').value;
    const unit = document.getElementById('unitInput').value;
    const quantity = document.getElementById('itemQuantity').value;
    const description = document.getElementById('itemDescription').value;
    const category = document.getElementById('categorySelect').value;

    // Placeholder emoji based on category
    let emoji = "📦";
    if (category.toLowerCase() === "vegetables") emoji = "🥦";
    else if (category.toLowerCase() === "fruits") emoji = "🍎";

    const card = document.createElement("div");
    card.className = "item-card";
    card.innerHTML = `
      <div class="card-top">${emoji}</div>
      <div class="card-body">
        <h3>${name}</h3>
        <p>${description}</p>
        <div class="info">
          <div><strong>${category}</strong><br><span>Category</span></div>
          <div><input type="checkbox" ${quantity > 0 ? "checked" : ""} disabled><br><span>Stock</span></div>
          <div><strong>${unit}</strong><br><span>Unit</span></div>
        </div>
        <div class="quantity">
          <button class="decrease">-</button>
          <span class="qty">0.5 ${unit}</span>
          <button class="increase">+</button>
        </div>
        <button class="add-cart">
          🛒 Add to Cart - ₹${(price * 0.5).toFixed(2)}
        </button>
      </div>
    `;
    container.appendChild(card);

    form.reset(); // Clear the form
  });
</script>
</body>

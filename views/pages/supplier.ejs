        //             <p>Your supplier registration has been submitted successfully. You will receive a confirmation email shortly.</p>
        //             <p><strong>Registration ID:</strong> SUP${Date.now()}</p>
        //         </div>
        //     `;
            
        //     // Hide buttons
        //     document.getElementById('prevBtn').style.display = 'none';
        //     document.getElementById('submitBtn').style.display = 'none';
        // }
        function submitForm() {
    if (!validateSection(currentStep)) {
        return;
    }
    
    // Mark the final step as completed
    const finalStepCircle = document.getElementById(`step${currentStep}Circle`);
    const finalStepLabel = document.getElementById(`step${currentStep}Label`);
    if (finalStepCircle && finalStepLabel) {
        finalStepCircle.classList.remove('active');
        finalStepCircle.classList.add('completed');
        finalStepLabel.classList.remove('active');
        finalStepLabel.classList.add('completed');
        finalStepCircle.innerHTML = '✓';
    }
    
    // Disable submit button to prevent double submission
    const submitBtn = document.getElementById('submitBtn');
    submitBtn.disabled = true;
    submitBtn.textContent = 'Submitting...';
    
    // Get form data
   const form = document.getElementById('supplierForm');
    const formData = new FormData(form);
    const data = {};
    formData.forEach((value, key) => { data[key] = value; });
    // Submit via AJAX
    fetch('/supplierlist', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
    })

    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Show success message
            const section = document.getElementById('section3');
            section.innerHTML = `
                <div class="success-message">
                    <h3>Registration Successful!</h3>
                    <p>Your supplier registration has been submitted successfully.</p>
                    <p><strong>Registration ID:</strong> ${data.registrationId}</p>
                </div>
            `;
            
            // Hide buttons
            document.getElementById('prevBtn').style.display = 'none';
            document.getElementById('submitBtn').style.display = 'none';
        } else {
            // Show error message
            alert('Registration failed: ' + data.message);
            submitBtn.disabled = false;
            submitBtn.textContent = 'Submit Registration';
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Registration failed. Please try again.');
        submitBtn.disabled = false;
        submitBtn.textContent = 'Submit Registration';
    });
}
        
        // Auto-format inputs
        document.getElementById('aadhaarNumber').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\s/g, '').replace(/\D/g, '');
            if (value.length > 12) value = value.slice(0, 12);
            value = value.replace(/(.{4})(.{4})(.{4})/, '$1 $2 $3').trim();
            e.target.value = value;
        });

        document.getElementById('gstNumber').addEventListener('input', function(e) {
            e.target.value = e.target.value.toUpperCase();
        });

        document.getElementById('panNumber').addEventListener('input', function(e) {
            e.target.value = e.target.value.toUpperCase();
        });

        document.getElementById('ifscCode').addEventListener('input', function(e) {
            e.target.value = e.target.value.toUpperCase();
        });

        // Initialize
        showSection(1);
    </script>
</body>
